<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivityFragment"
    android:id="@+id/main_layout"
    android:background="#ff4d4d4d">

    <TextView android:text="@string/choose_stats"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/choose_stats"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:textColor="#c33d2b"
        android:textSize="35sp"
        android:fontFamily="Georgia"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/balance_classes"
        android:id="@+id/balance_class_checkBox"
        android:layout_below="@+id/choose_stats"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textColor="#7D7D7D"
        android:textSize="25sp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/balance_roles"
        android:id="@+id/balance_roles_checkBox"
        android:layout_below="@+id/balance_class_checkBox"
        android:layout_alignParentStart="true"
        android:layout_marginTop="3dp"
        android:textColor="#7D7D7D"
        android:textSize="25sp"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/have_stuns"
        android:id="@+id/have_stuns_checkBox"
        android:layout_below="@+id/balance_roles_checkBox"
        android:layout_alignParentStart="true"
        android:layout_marginTop="3dp"
        android:textColor="#7D7D7D"
        android:textSize="25sp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/generate"
        android:id="@+id/button"
        android:layout_below="@+id/have_stuns_checkBox"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
            <ImageView
                android:src="@drawable/bloodseeker_lg"
                android:id="@+id/imageView"
                android:layout_height="56dp"
                android:layout_width="100dp" />

            <ImageView
                android:src="@drawable/crystal_maiden_lg"
                android:id="@+id/imageView2"
                android:layout_height="56dp"
                android:layout_width="100dp" />

            <ImageView
                android:src="@drawable/skywrath_mage_lg"
                android:id="@+id/imageView3"
                android:layout_height="56dp"
                android:layout_width="100dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:src="@drawable/storm_spirit_lg"
                android:id="@+id/imageView4"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:layout_width="100dp"
                android:layout_gravity="right" />

            <ImageView
                android:src="@drawable/sven_lg"
                android:id="@+id/imageView5"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:layout_width="100dp"
                android:layout_gravity="left" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
